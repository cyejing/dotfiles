"" Source your .vimrc
"source ~/.vimrc

""" Map leader to space ---------------------
let mapleader=" "

""" Common settings -------------------------
" 搜索高亮1
set hlsearch
" 模式搜索实时预览，增量搜索
set incsearch
" 忽略大小写
set ignorecase
" 智能忽略大小写
set smartcase
" 显示当前的模式
set showmode
" 显示当前行号
set number

set scrolloff=5
" 设置命令历史记录条数
set history=100
" 共享系统粘贴板
set clipboard=unnamed
" 基于缩进或语法进行代码折叠
set foldmethod=syntax
" 启动vim 时关闭折叠代码
set nofoldenable
" 关闭兼容vi
set nocompatible
" 开启高亮语法
syntax enable
" 允许使用指定语法高亮配色方案替换默认方案
syntax on
" vim 智能命令行模式智能不全
set wildmenu
" 总是显示状态栏
set laststatus=2
" 显示光标当前位置
set ruler
" 禁止折行
set nowrap
" 将制表符扩展为空格
set expandtab

""" Basics Mappings --------------------------------
"map Q gq
map <C-Q> <Esc>
imap <C-Q> <Esc>

map <C-J> 8j
map <C-K> 8k

map <C-A> ^
map <C-E> $

map <C-X> = <C-w>c
map <S-X> = :bdelete<CR>

imap <C-A> <ESC>I
imap <C-E> <ESC>A

""" Plugins  --------------------------------
set easymotion
set ideajoin
set surround
set ReplaceWithRegister
set NERDTree

map sc <Plug>(easymotion-bd-f)
let g:NERDTreeMapActivateNode="l"
""""""""""""""""""""""""""""""""""""""IDEA Action""""""""""""""""""""""""""""""""
" -- Map IDE actions to IdeaVim -- https://jb.gg/abva4t
"map <C-Q> <Action>(ReformatCode)

map <C-I> <Action>(Forward)
map <C-O> <Action>(Back)
map <S-H> <Action>(PreviousTab)
map <S-L> <Action>(NextTab)

map sf <Action>(GotoFile)
map sp <Action>(ManageRecentProjects)
map ss <Action>(RecentFiles)
map st <Action>(FindInProject)
map sh <Action>(FileStructurePopup)

map gf <Action>(ReformatCode)
map gn <Action>(CommentByLineComment)
map ga <Action>(CodeCompletion)
map gd <Action>(GotoDeclaration)
map gr <Action>(GotoDeclaration)
map gc <Action>(ShowUsages)
map ge <Action>(GotoNextError)
map gi <Action>(GotoImplementation)
map gs <Action>(GotoSuperMethod)
map gl <Action>(ShowErrorDescription)
map gj <Action>(GotoNextError)
map gk <Action>(GotoPreviousError)


map cl <Action>(CloseAllToTheRight)
map <leader>lr <Action>(RenameElement)

""" sidebar
nmap <C-M> :NERDTreeToggle <CR>
nmap <C-H> <Action>(ActivateProjectToolWindow)
map <leader>h <Action>(ActivateStructureToolWindow)
map <leader>x <Action>(HideAllWindows)
map <leader>bx <Action>(CloseAllEditorsButActive)

map <leader>s <Action>(SelectInProjectView)
map <leader>ga <Action>(Annotate)

" sethandler
sethandler <C-J> n-v:vim i:ide
sethandler <C-K> n-v:vim i:ide

" Find more examples here: https://jb.gg/share-ideavimrc
